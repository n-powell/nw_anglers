
<script src="//maps.google.com/maps/api/js?key=AIzaSyCgXlp04HJJ5WVg5-o4izjKXRmRyfFg0pU"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->

<% if current_user %>
<h3><%= link_to "View all Fishing Trips", trips_path %></h3>
<p class="btn"><%= link_to "Add A Trip", new_trip_path %></p>

  <div class="row">
      <div class="col-sm-2">
        <% if current_user.trips.any? %>
          <% current_user.trips.each do |trip| %>
            <li><%= link_to trip.address, trip %></li>
          <% end %>
        <% else %>
          <br>
          <p> You have not yet logged any trips. Please add a trip to place on your trip map.</p>
        <% end %>
      </div>

      <div class="col-sm-6 map container">

        <div class="innermap">

            <div id="map" style='width: 900px; height: 700px;'></div>


          <script type"text/javascript">
          handler = Gmaps.build('Google');
          handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
            markers = handler.addMarkers(<%= raw @hash.to_json %>);
            handler.bounds.extendWith(markers);
            handler.fitMapToBounds();
          });
          </script>
        </div>
      </div>
  </div>

  <img style="-webkit-user-select: none;background-position: 0px 0px, 10px 10px;background-size: 20px 20px;background-image:linear-gradient(45deg, #eee 25%, transparent 25%, transparent 75%, #eee 75%, #eee 100%),linear-gradient(45deg, #eee 25%, white 25%, white 75%, #eee 75%, #eee 100%);" src="https://waterdata.usgs.gov/nwisweb/graph?agency_cd=USGS&amp;site_no=14142500&amp;parm_cd=00065&amp;period=7">
<% else %>
<div class="">
  <h3>Welcome to NW Anglers</h3>
  <p>Please sign up and create an account!</p>
</div>
<% end %>

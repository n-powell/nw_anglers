<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @post.name %>
</p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<ul>
    <% @post.responses.each do |response|%>
      <% if response.id %>
        <li>
          "<%= response.name%>" -
          <%= response.content%>
          <% if current_user && current_user.admin %>
            <%= link_to "Delete response", post_response_path(@post, response), method: "delete" %>
          <% end %>
        </li>
      <% end%>
    <% end %>
  </ul>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
